@using MVCAssignment.WebApp.Areas.NashTech.Models;
@model List<Person>
<!DOCTYPE html>
<html>

<head>
    <title>List</title>
    <style>
        /* Add some basic styling for better appearance */
        table {
            width: 100%;
            border-collapse: collapse;
        }

        th,
        td {
            border: 1px solid black;
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
        }
    </style>
</head>

<body>
    <h2>Information Table</h2>
    <table>
        <!-- Table Header -->
        <thead>
            <tr>
                <th>Full Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var i in Model)
            {
                <tr>
                    <td>@i.LastName @i.FirstName</td>
                </tr>
            }
        </tbody>
    </table>
</body>

</html>
